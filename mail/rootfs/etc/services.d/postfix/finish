#!/command/with-contenv bashio
# ==============================================================================
# Home Assistant Community App: phpMyAdmin
# Take down the S6 supervision tree when PHP FPM fails
# ==============================================================================
if [[ "${1}" -ne 0 ]] && [[ "${1}" -ne 256 ]]; then
    bashio::log.warning "Postfix crashed, halting app"
    /run/s6/basedir/bin/halt
fi

bashio::log.info "Postfix stopped, restarting..."